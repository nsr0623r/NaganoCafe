<!--管理者：顧客編集画面-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">
      <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
    </h4>
  </div>

  <div class="row form-group">
    <p class="col-sm-2">会員ID</p>
    <div class="col-sm-8"><%= @customer.id %></div>
  </div>
  <%= form_with model: @customer, url:  admin_customer_path(@customer) do |f| %>
    <div class="row form-group">
      <%= f.label '氏名', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :first_name, class: "form-control col-sm-2 mr-5" %>
      <%= f.text_field :last_name, class: "form-control col-sm-2" %>
    </div>
    <div class="row form-group">
      <%= f.label 'フリガナ', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :first_name_kana, class: "form-control col-sm-2 mr-5" %>
      <%= f.text_field :last_name_kana, class: "form-control col-sm-2" %>
    </div>
    <div class="row form-group">
      <%= f.label '郵便番号', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :postal_code, class: "form-control col-sm-2" %>
    </div>
    <div class="row form-group">
      <%= f.label '住所', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :address, class: "form-control col-sm-5" %>
    </div>
    <div class="row form-group">
      <%= f.label '電話番号', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :telephone_number, class: "form-control col-sm-2" %>
    </div>
    <div class="row form-group">
      <%= f.label 'メールアドレス', class: "col-sm-2 col-form-label" %>
      <%= f.text_field :email, class: "form-control col-sm-2" %>
    </div>
    <div class="row form-group">
      <p class="col-sm-2">会員ステータス</p>
      <%= f.radio_button :is_deleted, false, class: "mb-3" %>
      <%= f.label :is_deleted, '有効', value: false, class: "col-sm-2" %>
      <%= f.radio_button :is_deleted, true, class: "mb-3" %>
      <%= f.label :is_deleted, '退会', value: true, class: "col-sm-2" %>
    </div>
    <p class="col"><%= f.submit '変更を保存', class: "btn btn-success mx-auto d-block" %></p>
    <% end %>
  </div>
</div>