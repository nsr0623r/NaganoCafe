<h1>Admin::Customers#edit</h1>
<!--管理者：顧客編集画面-->
<div class="container">
  <h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h4>

  <div class="row">
    <p class="col-sm-2">会員ID</p>
    <div class="col-sm-8"><%= @customer.id %></div>
  </div>
  <%= form_with model: @customer, url:  admin_customer_path(@customer) do |f| %>
    <div class="row">
      <p class="col-sm-2"><%= f.label '氏名' %></p>
      <div class="col-sm-8">
        <%= f.text_field :first_name, class: "mr-5" %><%= f.text_field :last_name %>
      </div>
    </div>
    <div class="row">
      <p class="col-sm-2"><%= f.label 'フリガナ' %></p>
      <div class="col-sm-8">
        <%= f.text_field :first_name_kana, class: "mr-5" %><%= f.text_field :last_name_kana %>
      </div>
    </div>
    <div class="row">
      <p class="col-sm-2"><%= f.label '郵便番号' %></p>
      <div class="col-sm-8"><%= f.text_field :postal_code %></div>
    </div>
    <div class="row">
      <p class="col-sm-2"><%= f.label '住所' %></p>
      <div class="col-sm-10 w-100"><%= f.text_field :address %></div>
    </div>
    <div class="row">
      <p class="col-sm-2"><%= f.label '電話番号' %></p>
      <div class="col-sm-8"><%= f.text_field :telephone_number %></div>
    </div>
    <div class="row">
      <p class="col-sm-2"><%= f.label 'メールアドレス' %></p>
      <div class="col-sm-8"><%= f.text_field :email %></div>
    </div>
    <div class="row">
      <p class="col-sm-2">会員ステータス</p>
      <div class="col-sm-8">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, '有効', value: false %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, '退会', value: true %>
      </div>
    </div>
    <p class="col"><%= f.submit '変更を保存', class: "btn btn-success mx-auto d-block" %></p>
    <% end %>
  </div>
</div>