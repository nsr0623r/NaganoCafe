<h1>Admin::Customers#index</h1>
<!--管理者：顧客一覧画面-->
<div class="container">
  <h4 class="bg-secondary bg-opacity-25 w-75">会員一覧</h4>

  <table class="table w-75 mx-auto">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id), class: "border_bottom text-dark"  do %>
            <%= customer.first_name %><%= customer.last_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == false %>
            <strong class="text-success">有効</strong>
          <% else customer.is_deleted != false %>
            <strong class="text-black-50">退会</strong>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>