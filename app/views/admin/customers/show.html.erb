<h1>Admin::Customers#show</h1>
<!--管理者：顧客詳細画面-->
<div class="container">
  <h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h4>
  
  <div class="row">
    <p class="col-sm-3">会員ID</p>
    <div class="col-sm-9"><%= @customer.id %></div>
  </div>
  <div class="row">
    <p class="col-sm-3">氏名</p>
    <div class="col-sm-9">
      <%= @customer.first_name %>
      <%= @customer.last_name %>
    </div>
  </div>
  <div class="row">
    <p class="col-sm-3">フリガナ</p>
    <div class="col-sm-9">
      <%= @customer.first_name_kana %>
      <%= @customer.last_name_kana %>
    </div>
  </div>
  <div class="row">
    <p class="col-sm-3">郵便番号</p>
    <div class="col-sm-9"><%= @customer.postal_code %></div>
  </div>
  <div class="row">
    <p class="col-sm-3">住所</p>
    <div class="col-sm-9"><%= @customer.address %></div>
  </div>
  <div class="row">
    <p class="col-sm-3">電話番号</p>
    <div class="col-sm-9"><%= @customer.telephone_number %></div>
  </div>
  <div class="row">
    <p class="col-sm-3">メールアドレス</p>
    <div class="col-sm-9"><%= @customer.email %></div>
  </div>
   <div class="row">
    <p class="col-sm-3">会員ステータス</p>
    <div class="col-sm-9">
      <% if @customer.is_deleted == false %>
        <strong class="text-success">有効</span>
      <% else @customer.is_deleted != false %>
        <strong class="text-black-50">退会</span>
      <% end %>
    </div>
  </div>
  <p class="row">
    <%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success mx-auto d-block" %>
  </p>
</div>