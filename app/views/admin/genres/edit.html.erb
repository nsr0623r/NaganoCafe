<!--管理者：ジャンル編集画面-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">ジャンル編</h4>
  </div>

  <div>
    <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
      <%= f.label 'ジャンル名', class: "col-sm-2" %>
      <%= f.text_field :name, autofocus: true, class: "col-sm-2" %>
      <%= f.submit '変更を保存', class: "btn btn-success col-sm-2 ml-5" %>
    <% end %>
  </div>
</div>