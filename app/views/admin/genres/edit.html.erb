<h1>Admin::Genres#edit</h1>
<!--管理者：ジャンル編集画面-->
<div class="container">
  <h4>ジャンル編集</h4>

  <div>
    <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
      <%= f.label 'ジャンル名', class: "col-sm-2" %>
      <%= f.text_field :name, autofocus: true, class: "col-sm-2" %>
      <%= f.submit '変更を保存', class: "btn btn-success col-sm-1" %>
    <% end %>
  </div>
</div>