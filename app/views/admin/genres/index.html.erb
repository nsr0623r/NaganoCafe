<h1>Admin::Genres#index</h1>
<!--管理者：ジャンル管理画面(一覧・追加を兼ねる)-->

<div class="container">
  <h4>ジャンル一覧・追加</h4>

  <div>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <%= f.label 'ジャンル名', class: "col-sm-2" %>
      <%= f.text_field :name, autofocus: true, class: "col-sm-2", placeholder: "ジャンル名" %>
      <%= f.submit '新規登録', class: "btn btn-success col-sm-1" %>
    <% end %>
  </div>

  <table class="table w-50 mt-5">
    <thead class="thead-light">
      <tr>
        <th class="col-sm-8">ジャンル</th>
        <th class="col-ms-2"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>