<!--管理者：トップページ(注文一覧画面)-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">注文履歴一覧</h4>
  </div>

  <div class="row block-center">
    <div class="col-1"></div>
    <div class="col-10">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th class="col-3">購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
    
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id), class: "text-dark border-bottom border-dark" do %>
                <%= l order.created_at %>
              <% end %>
            </td>
            <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>