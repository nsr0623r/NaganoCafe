<h1>Admin::Items#edit</h1>
<!--管理者：商品編集画面-->
<div class="container">
  <h4>商品編集</h4>
  
  <form>
    <%= form_with model: @item, url: admin_item_path(@item) do |f| %>
      <div class="form-group row justify-content-center">
        <%= f.label '商品画像', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.label '商品名', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.text_field :name, autofocus: true %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.label '商品説明', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.text_area :introduction %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.label 'ジャンル', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択して下さい--"} %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.label '税抜価格', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.text_field :price %>円
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <span class="col-sm-2 col-form-label">販売ステータス</span>
        <div class="col-sm-2">
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中', value: true %>
        </div>
        <div class="col-sm-4">
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中', value: false %>
        </div>
      </div>
      <p class="col">
        <%= f.submit '変更を保存', class: "btn btn-success mx-auto d-block" %>
      </p>
    <% end %>
  </form>
</div>