<h1>Admin::Items#new</h1>
<!--管理者：商品新規登録画面-->
<div class="container">
  <h4>商品新規登録</h4>

  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="form-group row justify-content-center">
      <%= f.label '商品画像', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.label '商品名', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "商品名" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.label '商品説明', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.label 'ジャンル', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択して下さい--"}, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.label '税抜価格', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :price, class: "form-control", placeholder: "税抜価格" %>
        <div>円</div>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.label '販売ステータス', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-2">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中', value: true %>
      </div>
      <div class="col-sm-4">
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: false %>
      </div>
    </div>
    <p class="col">
      <%= f.submit '新規登録', class: "btn btn-success mx-auto d-block" %>
    </p>
  <% end %>
</div>