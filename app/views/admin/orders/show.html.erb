<h1>Admin::Orders#show</h1>
<p>Find me in app/views/admin/orders/show.html.erb</p>
<!--管理者：注文履歴詳細-->
<div class="container">
  <h3>注文履歴詳細</h3>

  <div class="customer-content">
    <div class="row">
      <div class="col">購入者</div>
      <div class="col">
        <%= link_to admin_customer_path(@order) do %>
          <%= @order.customer.first_name %><%= @order.customer.last_name %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col">注文日</div>
      <div class="col"><%= l @order.created_at, format: :short %></div>
    </div>
  </div>
  <div class="row">
    <div class="col">配送先</div>
    <div class="col">
      〒<%= @order.postal_code %><%= @order.address %><br>
      <%= @order.name %>
    </div>
  </div>
  <div class="row">
    <div class="col">支払方法</div>
    <div class="col">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  <div class="row">
    <div class="col">注文ステータス</div>
    <div class="col">
      <%= form_for @order, url: admin_order_path do |f| %>
        <%= f.select :status, Order.statuses_i18n.invert %>
        <%= f.submit "更新" %>
      <% end %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @order_details.each do |order_detail| %>
      <% total = 0 %>
      <% total += order_detail.item.with_tax_price %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.with_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price %></td>
        <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :pacth do |f| %>
        <td>
          <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
          <%= f.submit "更新" %>
        </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>