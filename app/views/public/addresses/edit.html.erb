<!--顧客：配送先編集-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">配送先編集</h4>
  </div>
    
  <%= form_with model: @address, url: address_path(@address) do |f| %>
    <div class="form-group row">
      <%= f.label '郵便番号(ハイフンなし)', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :postal_code, class: "form-control col-sm-3" %>
    </div>
    <div class="form-group row">
      <%= f.label '住所', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :address, class: "form-control col-sm-3" %>
    </div>
    <div class="form-group row">
      <%= f.label '宛名', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :name, class: "form-control col-sm-3 mr-5" %>
      <%= f.submit '変更内容を保存', class: "form-control col-sm-2 btn btn-success ml-5 mb-5" %>
    </div>
    <% end %>
  </div>
    </div>
</div>