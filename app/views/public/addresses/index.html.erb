<!--顧客：配送先登録/一覧-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">配送先登録/一覧</h4>
  </div>

  <%= form_with model: @address, url: addresses_path do |f| %>
    <div class="form-group row">
      <%= f.label '郵便番号(ハイフンなし)', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :postal_code, class: "form-control col-sm-3" %>
    </div>
    <div class="form-group row">
      <%= f.label '住所', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :address, class: "form-control col-sm-3" %>
    </div>
    <div class="form-group row">
      <%= f.label '宛名', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :name, class: "form-control col-sm-3 mr-5" %>
      <%= f.submit '新規登録', class: "form-control col-sm-1 btn btn-success mb-5" %>
    </div>
    <% end %>

  <table class="table table-bordered mt-5 col-8">
    <thead>
      <tr>
        <th class="col-1">郵便番号</th>
        <th class="col-3">住所</th>
        <th class="col-2">宛名</th>
        <th class="col-3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(address), class: "btn btn-success p-1 mr-3" %>
          <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-danger p-1" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>