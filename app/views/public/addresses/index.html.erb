<h1>Public::Addresses#index</h1>
<!--顧客：配送先登録/一覧-->
<div class="container">
  <h2>配送先登録/一覧</h2>

  <div class="address-content">
    <%= form_with model: @address, url: addresses_path do |f| %>
      <p>
        <%= f.label '郵便番号(ハイフンなし)' %>
        <%= f.text_field :postal_code_string %>
      </p>
      <p>
        <%= f.label '住所' %>
        <%= f.text_field :address %>
      </p>
      <p>
        <%= f.label '宛名' %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
      </p>
    <% end %>
  </div>

  <table>
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code_string %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する', edit_address_path(address) %>
          <%= link_to '削除する', address_path(address), method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>