<h1>Public::CartItems#index</h1>
<!--顧客：カート内商品画面-->
<div class="containe">
  <h2>ショッピングカート</h2>
  <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete %>
  
  <table>
    <thead>
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
        <td></td>
      </tr>
      <% total = 0 %>
    </thead>
    
    <tbody>
      <% if current_customer.cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <% if cart_item.item.image.attached? %>
              <%= image_tag cart_item.item.image, size: "100x100" %>
            <% else %>
              <%= image_tag 'default-image', size: "100x100" %>
            <% end %>
            <%= cart_item.item.name %>
          </td>
          <td><%= (cart_item.item.price * 1.1).floor %></td>
          <td>
            <%= form_with model: @cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
              <%= f.number_field :amount, min:1, max: 10 %>
              <%= f.submit "変更" %>
            <% end %>
          </td>
          <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
          <% total += (cart_item.item.price * 1.1).floor * cart_item.amount %>
        </tr>
        <% end %>
      <% end %>
      <div>
        <tr>
          <th>合計金額</th>
          <td><%= total %></td>
        </tr>
      </div>
    </tbody>
  </table>
  <%= link_to '買い物を続ける', items_path %>
  <%= link_to '情報入力に進む', new_order_path %>
</div>