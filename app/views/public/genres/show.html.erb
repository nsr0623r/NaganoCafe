<!--顧客：ジャンル検索　検索一覧-->
<div class="container">
  <div class="row">
    <div class="column col-lg-3">
      <%= render 'public/genres/sidebar', genres: @genres %>
  </div>

  <!--ジャンル商品一覧-->
  <div class="column col-lg-9">
    <div class="d-flex mt-5">
      <h2><strong><%= @genre.name %>一覧</strong></h2>
      <p class="mt-3 ml-2">(全<%= @genre.items.count %>件)</p>
    </div>

    <div class="d-flex flex-wrap">
      <% @genre.items.each do |item| %>
      <div class="mr-3">
        <p>
          <%= link_to item_path(item.id) do %>
            <% if item.image.attached? %>
              <%= image_tag item.image, size: "190x130" %>
            <% else %>
              <%= image_tag 'default-image', size: "190x130" %>
            <% end %>
          <% end %>
        </p>
        <p><%= item.name %></p>
        <p>￥<%= item.price.to_s(:delimited) %></p>
        </div>
      <% end %>
      <%#= paginate @genre %>
    </div>
  </div>
</div>