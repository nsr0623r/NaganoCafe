<h1>Public::Orders#index</h1>
<!--顧客：注文履歴画面-->
<div class="container">
  <h3>注文履歴一覧</h3>

  <table class="table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= l order.created_at, format: :short %></td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_details| %>
            <%= order_details.item.name %>
          <% end %>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to '表示する', order_path(order) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>