<!--顧客：注文情報入力画面(支払方法・配送先の選択)-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">注文情報入力</h4>
  </div>

    <%= form_with model: @order, url: order_confirm_path, method: :post do |f| %>
    <h5><strong>支払方法</strong></h5>
    <div class="form-group row">
      <div>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0), class: "mr" %>
        <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card], class: "ml-5" %><br>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
      </div>
    </div>
    <h5><strong>お届け先</strong></h5>
    <div class="form-group row">
      <div class="col-10">
      <%= f.radio_button :select_address, 0 %>
      <%= f.label 'ご自身の住所' %><br>
      <%= "〒" + current_customer.postal_code + " " + current_customer.address %><br>
      <%= current_customer.first_name + current_customer.last_name  %>
      </div>
    </div>
    <p>
      <%= f.radio_button :select_address, 1 %>
      <%= f.label '登録済住所から選択' %><br>
      <%# if @address.customer_id == current_customer.id %>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      <%# end %>
    </p>
    <p>
      <%= f.radio_button :select_address, 2 %>
      <%= f.label '新しいお届け先' %><br>
      <%= f.label '郵便番号(ハイフンなし)' %>
      <%= f.text_field :postal_code %><br>
      <%= f.label '住所' %>
      <%= f.text_field :address %><br>
      <%= f.label '宛名' %>
      <%= f.text_field :name %>
    </p>
    <p><%= f.submit "確認画面へ進む" %></p>
    <% end %>
  </div>
</div>