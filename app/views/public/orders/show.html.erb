<h1>Public::Orders#show</h1>
<!--顧客：注文履歴詳細画面-->
<div class="container">
  <h3>注文履歴詳細</h3>

  <!--注文情報一覧-->
  <table class="order-table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払方法</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
      <tr>
        <td><%= l @order.created_at %></td>
        <td>
          〒<%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.payment_method_i18n %>
          <%= @order.status %>
        </td>
      </tr>
    </tbody>
  </table>
  
  <table class="price-table">
    <thead>
      <tr>
        <th>商品合計</th>
        <th>配送料</th>
        <th>ご請求額</th>
      </tr>
    </thead>
    
    <tbody>
      <tr>
        <td><%#= @order.price %></td>
        <td><%= @order.shipping_cost %></td>
        <td><%= @order.total_payment %></td>
      </tr>
    </tbody>
  </table>
  
  <table class="order-detail-table">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    
    <tbody>
      <tr>
        <td><%= @order_details.item.name %></td>
        <td><%= @order_details.item.price %></td>
        <td><%= @order_details.item.amount %></td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>