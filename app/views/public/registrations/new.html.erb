<!--顧客用新規登録画面-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">新規会員登録</h4>
  </div>
  
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  
    <div class="field form-group row">
      <label class="col-sm-2 col-form-label">名前</label>
      <%= f.label :first_name, "(姓)", class: "col-sm-1 col-form-label" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "令和", class: "form-control col-sm-3" %>
      <%= f.label :last_name, "(名)", class: "col-sm-1 col-form-label" %>
      <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "道子", class: "form-control col-sm-3" %>
    </div>
  
    <div class="field form-group row">
      <span class="col-sm-2 col-form-label">フリガナ</span>
      <%= f.label :first_name_kana, "(セイ)", class: "col-sm-1 col-form-label" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "レイワ", class: "form-control col-sm-3" %>
      <%= f.label :last_name_kana, "(メイ)", class: "col-sm-1 col-form-label" %>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "ミチコ", class: "form-control col-sm-3" %>
    </div>
  
    <div class="field form-group row">
      <%= f.label 'メールアドレス', class: "col-sm-3 col-form-label" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control col-sm-3" %>
    </div>
  
    <div class="field form-group row">
      <%= f.label '郵便番号(ハイフンなし)', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", class: "form-control col-sm-3" %>
    </div>
  
    <div class="field form-group row">
      <%= f.label '住所', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-sm-6" %>
    </div>
  
    <div class="field form-group row">
      <%= f.label '電話番号(ハイフンなし)', class: "col-sm-3 col-form-label" %>
      <%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: "0000000000", class: "form-control col-sm-3" %>
    </div>
  
    <div class="field form-group row">
      <%= f.label 'パスワード(6文字以上)', class: "col-sm-3 col-form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-3" %>
    </div>
  
    <div class="field form-group row">
      <%= f.label 'パスワード(確認用)', class: "col-sm-3 col-form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-3" %>
    </div>
  
    <div class="actions row">
      <div class="col-sm-3"></div>
      <%= f.submit "新規登録", class: "btn btn-success px-5" %>
    </div>
  <% end %>
  
  <div class="mt-3">
    <h4 class="d-inline border border-secondary px-3">既に登録済みの方</h4>
    <p class="ml-5 mt-2">
      <%= link_to "こちら", new_customer_session_path %>
      からログインしてください。
    </p>
  </div>
</div>