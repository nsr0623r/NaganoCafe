<!--顧客用ログイン画面-->
<div class="container">
  <div class="m-4">
    <h4 class="d-inline border border-secondary px-3">ログイン</h4>
    <div>
      <%= notice %>
    </div>
  </div>
  
  <span class="d-inline border border-secondary px-3 ml-5">会員の方はこちらからログイン</span>
  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="field form-group row mt-4">
      <%= f.label 'メールアドレス', class: "col-sm-3 col-form-label text-right mr-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-4" %>
    </div>
  
    <div class="field form-group row">
      <%= f.label 'パスワード', class: "col-sm-3 col-form-label text-right mr-4" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-4" %>
    </div>
  
    <div class="actions row">
      <div class="col-sm-4"></div>
      <%= f.submit "ログイン", class: "btn btn-primary px-5" %>
    </div>
  <% end %>
  
  <div class="mt-3">
    <span class="d-inline border border-secondary px-3 ml-5">会員登録がお済みでない方</span>
    <p class="mt-2 ml-5">
      <%= link_to "こちら", new_customer_registration_path %>
      から新規登録を行っててください。
    </p>
  </div>
</div>